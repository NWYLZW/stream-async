{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "incremental": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictBindCallApply": true,
    "resolveJsonModule": true,
    "types": [ "mocha" ],
    "lib": [
      "esnext", "dom"
    ],
    "rootDir": "src",
    "paths": {
      "stream-async": [ "src" ]
    }
  },
  "include": [ "src" ],
  "ts-node": {
    "require": [ "tsconfig-paths/register" ]
  }
}
